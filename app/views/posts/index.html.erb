<p id="notice"><%= notice %></p>

<h1>My Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td> 
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%v %r") %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info' %></td>
        <% if user_signed_in? && current_user.user_type == 'admin' %>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.user_type == 'admin' %>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<% end %>